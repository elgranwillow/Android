<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Activity"
        android:id="@+id/btnNormal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Activity With Parameter"
        android:id="@+id/btnParameter"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnNormal"
        android:layout_alignStart="@+id/btnNormal"
        android:layout_alignRight="@+id/btnNormal"
        android:layout_alignEnd="@+id/btnNormal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calling Activities"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnNormal"
        android:layout_alignEnd="@+id/btnNormal"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />
</RelativeLayout>
